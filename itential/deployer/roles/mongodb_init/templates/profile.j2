    "log_level": "info",
    "log_max_file_size": 10485760,
    "log_max_files": 10,
    "log_timezone_offset": 0,
    "syslog": {
      "app_name": "",
      "eol": "",
      "facility": "local0",
      "host": "127.0.0.1",
      "level": "warning",
      "localhost": "",
      "path": "",
      "pid": "process.pid",
      "port": 514,
      "protocol": "udp4",
      "type": "BSD"
    },
    "webserver": {
      "log_directory": "{{ iap_install_dir }}/logs",
      "log_filename": "webserver.log"
    }
  },
  "pathProps": {
    "description": "File Path Variables",
    "encrypted": true
  },
  "prebuiltProps": {
    "repoConfigs": {
      "@itentialopensource": {
        "credentials": {},
        "enabled": true,
        "hostname": "gitlab.com",
        "path": "itentialopensource/pre-built-automations",
        "type": "gitlab"
      }
    }
  },
  "rabbitmq": {
    "adminPort": 15672,
    "frameMax": 0,
    "heartbeat": 0,
    "hosts": {{ rabbit_hosts | to_json }},
    "locale": "en_US",
    "password": "{{ rabbit_password }}",
    "port": {{ rabbit_port }},
    "protocol": "{{ rabbit_protocol }}",
    "username": "{{ rabbit_user }}",
    "vhost": "{{ rabbitmq_vhost }}"
  },
  "redisProps": {
    "db" : 0,
    "host": {{ redis_host | to_json }},
    "maxHeartbeatWriteRetries" : 20,
    "maxRetriesPerRequest" : 20,
    "name" : "mymaster",
    "password" : {{ redis_password | to_json }},
    "port" : 6379,
{% if redis_replication | bool %}
    "sentinels" : {{ sentinels | to_json }},
    "sentinelPassword" : {{ sentinel_password | to_json }},
    "sentinelUsername" : {{ sentinel_user | to_json }},
{% endif %}
    "username" : {{ redis_user | to_json }}
  },
  "retryStrategy": {
    "maxRetries": 10,
    "retryResetTimer": 60000
  },
  "services": [
    "{{ vars.service }}"
  ],
  "systemProps": {
